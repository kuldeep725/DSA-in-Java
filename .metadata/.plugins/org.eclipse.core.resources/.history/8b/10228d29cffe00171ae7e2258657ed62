import java.util.Scanner;


public class MultipleOfThree {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		while(t-- >0) {
			
			long  k = sc.nextLong();
//			int d[] = new int[k];
			int d0 = sc.nextInt();
			int d1 = sc.nextInt();
			long  sum = d0+d1;
			for(int i = 2; i < k; i++) {
				int val = sum;
				val = val % 10;
				sum += val;
			}
			
			if(sum % 3 == 0) {
				System.out.println("YES");
			}
			else {
				System.out.println("NO");
			}
			
		}
		sc.close();
	}
	
}
